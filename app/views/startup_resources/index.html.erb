<h1>Listing startup_resources</h1>

<h2>Categories</h2>

<ul>
<% StartupResource.category_list.each do |c| %>
  <li><%= c %></li>
<% end %>
</ul>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Category</th>
      <th>Name</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @startup_resources.each do |startup_resource| %>
      <tr>
        <td><%= startup_resource.user_id %></td>
        <td><%= startup_resource.category %></td>
        <td><%= startup_resource.name %></td>
        <td><%= startup_resource.url %></td>
        <td><%= link_to 'Show', startup_resource %></td>
        <td><%= link_to 'Edit', edit_startup_resource_path(startup_resource) %></td>
        <td><%= link_to 'Destroy', startup_resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Startup resource', new_startup_resource_path %>
